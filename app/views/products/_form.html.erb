
<%= form_for @product do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :brand %>
<%= f.text_field :brand %>

<%= f.label :description %>
<%= f.text_field :description %>

<%= f.label :image %>
<%= f.cl_image_upload :image %>

<%= f.label :price %>
<%= f.number_field :price %>

<%= f.label :category_id %>
<%= f.select :category_id, Category.pluck(:title, :id), :include_blank => true %>

<%= f.label :designer_id %>
<%= f.select :designer_id, Designer.pluck(:brand, :id), :include_blank => true %>


<%= f.submit %>


<% end %>
