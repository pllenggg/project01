<!DOCTYPE html>
<html>
  <head>
    <title>Jewellist</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= cloudinary_js_config %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <strong><%= link_to 'JEWELLIST', root_path, :class => "navbar-brand" %></strong>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
       <ul class="navbar-nav mr-auto">
         <li class="nav-item active">
           <%= link_to 'Home', root_path, :class => "nav-link"%>
         </li>
         <li class="nav-item">
        <%= link_to 'Categories', categories_path, :class => "nav-link"%>
        </li>

         <li class="nav-item">
        <%= link_to 'All Jewelleries', products_path, :class => "nav-link"%>
        </li>

        <li class="nav-item">
       <%= link_to 'Designers', designers_path, :class => "nav-link"%>
       </li>


      <% if @current_user.present? %>
        <%= link_to 'Edit Profile', edit_user_path(:id), :class => "nav-link"%>
        <%= link_to 'My wishlists', user_path(:id), :class => "nav-link" %>
        <%= link_to "Logout as #{@current_user.name.capitalize}", login_path, :method => 'delete', :class => "nav-link" %>
        <% if @current_user.admin? %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Manage Contents
        </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <%= link_to 'Add New Designer', new_designer_path, :class => "dropdown-item" %>
          <%= link_to 'Add New Product', new_product_path, :class => "dropdown-item" %>
          <%= link_to 'All Users', users_path, :class => "dropdown-item"%>
        <% end %>
          </div>
      <% else %>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Account
      </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
        <%= link_to 'Sign in', login_path, :class => "dropdown-item" %>
        <%= link_to 'Sign up', new_user_path, :class => "dropdown-item" %>
      <% end %>
        </div>

    </nav>



    <%= yield %>


  </body>
</html>
