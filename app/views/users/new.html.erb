
<h1>Sign Up!</h1>

<% if @user.errors.any? %>
  <ol>
    <%@user.errors.full_messages.each do |message|  %>
      <li><%= message %></li>
    <% end %>
  </ol>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :name, 'Username' %>
  <%= f.text_field :name%>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Sign up" %>

<% end %>
